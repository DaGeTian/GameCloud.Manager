
@{
    ViewBag.Title = "用户列表";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div ng-controller="usersController">
    <h2 class="page-header">用户列表</h2>
    @Html.Partial("Partial/_ListPageHeadBar")
    <table class="table table-bordered table-striped table-condensed">
        <thead>
            <tr>
                <th>账号</th>
                <th>姓名</th>
                <th>头像</th>
                <th>性别</th>
                <th>类型</th>
                <th>状态</th>
                <th>邮箱</th>
                <th>手机</th>
                <th>注册日期</th>
                <th>最近登录日期</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="row in raws">
                <td>{{row.AccountName}}</td>
                <td>{{row.Name}}</td>
                <td><img src="{{row.ProfileThumbnail}}" width="50" /></td>
                <td>{{row.Gender|enums:'gender'}}</td>
                <td>{{row.AccountType|enums:'accountType'}}</td>
                <td>{{row.AccountStatus|enums:'accountStatus'}}</td>
                <td>{{row.Email}}</td>
                <td>{{row.PhoneNum}}</td>
                <td>{{row.CreatedTime|date:'yyyy/MM/dd HH:mm:ss'}}</td>
                <td>{{row.LastLoginDateTime|date:'yyyy/MM/dd HH:mm:ss'}}</td>
            </tr>
        </tbody>
    </table>
    @Html.Partial("Partial/_ListPageFootBar")
</div>

